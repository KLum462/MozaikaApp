<Window x:Class="Mozaika.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        FontFamily="Segoe UI">

    <Border Background="White" CornerRadius="15" Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Gray" Opacity="0.4"/>
        </Border.Effect>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" 
                       Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин" Foreground="Gray" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginBox" Padding="5" FontSize="14" Margin="0,0,0,15"
                     BorderBrush="#DDDDDD" BorderThickness="1"/>

            <TextBlock Text="Пароль" Foreground="Gray" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Padding="5" FontSize="14" Margin="0,0,0,20"
                         BorderBrush="#DDDDDD" BorderThickness="1"/>

            <Button Content="Войти" Click="LoginButton_Click"
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    Padding="10" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Выход" Click="ExitButton_Click"
                    Background="Transparent" Foreground="Gray"
                    BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>